<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="custom_sales_order_id" type="int" />
        <attribute code="custom_sales_shipment_id" type="int" />
        <attribute code="integration_id" type="int">
            <join reference_table="custom_sales_order" reference_field="order_id" join_on_field="entity_id">
                <field>integration_id</field>
            </join>
        </attribute>
        <attribute code="sales_channel" type="string">
            <join reference_table="custom_sales_order" reference_field="order_id" join_on_field="entity_id">
                <field>sales_channel</field>
            </join>
        </attribute>
        <attribute code="supplier" type="string">
            <join reference_table="custom_sales_order" reference_field="order_id" join_on_field="entity_id">
                <field>supplier</field>
            </join>
        </attribute>
        <attribute code="cskh_comment" type="string" />
        <attribute code="carrier_code" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>carrier_code</field>
            </join>
        </attribute>
        <attribute code="contract_id" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>contract_id</field>
            </join>
        </attribute>
        <attribute code="shipment_status" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>status</field>
            </join>
        </attribute>
        <attribute code="city" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>city</field>
            </join>
        </attribute>
        <attribute code="district" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>district</field>
            </join>
        </attribute>
        <attribute code="street" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>street</field>
            </join>
        </attribute>
        <attribute code="contract_id" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>contract_id</field>
            </join>
        </attribute>
        <attribute code="created_at" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>created_at</field>
            </join>
        </attribute>
        <attribute code="confirmed_at" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>confirmed_at</field>
            </join>
        </attribute>
        <attribute code="packed_at" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>packed_at</field>
            </join>
        </attribute>
        <attribute code="send_hvc_at" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>send_hvc_at</field>
            </join>
        </attribute>
        <attribute code="delivery_at" type="string">
            <join reference_table="custom_sales_shipment" reference_field="order_id" join_on_field="entity_id">
                <field>delivery_at</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
